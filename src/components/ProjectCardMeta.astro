---
const { period, tags } = Astro.props as { period: string; tags: string[] };
---

<p
  class="absolute right-3 top-3 rounded-full bg-white/10 px-3 py-0.5 text-sm text-white transition-all duration-300 ease-in-out opacity-100 -translate-y-0 group-hover:opacity-0 group-hover:-translate-y-2"
>
  {period}
</p>

<div
  class="absolute left-3 bottom-3 text-sm flex flex-row gap-2 text-white transition-all duration-300 ease-in-out opacity-100 translate-y-0 group-hover:opacity-0 group-hover:translate-y-2"
>
  {
    tags?.map((tag) => (
      <p class="rounded-full bg-white/10 px-3 py-0.5">{tag}</p>
    ))
  }
</div>
